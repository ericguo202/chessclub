<%- layout("layouts/boilerplate") %>
    <h1 class="text-center">Signups for the LHS Chess Club</h1>
    <div class="row">
        <div class="col-md-6 offset-3">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const signup of signups) { %>
                        <tr>
                            <td>
                                <%= signup.name %>
                            </td>
                            <td>
                                <a href="mailto:<%= signup.email %>">
                                    <%= signup.email %>
                                </a>
                            </td>
                            <td>
                                <%= signup.grade %>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>