<%- layout("layouts/boilerplate") %>
    <h1 class="text-center">Sign Up Form</h1>
    <p class="text-center">This is not the form to register for an account for this website. You will need an account to
        view the forum. Please do so <a href="/register">here</a>.</p>
    <form action="/sign-up" method="POST" class="validatedForm" novalidate>
        <div class="mb-2">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" id="name" class="form-control" required>
            <div class="invalid-feedback">
                Name is required.
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-2">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" required>
            <div class="invalid-feedback">
                Must be a valid email.
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-2">
            <label for="grade" class="form-label">Grade Level</label>
            <input type="number" name="grade" id="grade" class="form-control" min="9" max="12" required>
            <div class="invalid-feedback">
                Grade must be between 9 and 12.
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success">Sign Up</button>
    </form>