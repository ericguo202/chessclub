<%- layout("layouts/boilerplate") %>
    <h1 class="text-center">Edit Post</h1>
    <div class="row">
        <div class="col-md-6 offset-3">
            <form action="/forum/<%= post._id %>?_method=PATCH" method="POST" class="validatedForm mb-3" novalidate>
                <div class="mb-2">
                    <label for="body" class="form-label"></label>
                    <textarea name="post[body]" id="body" class="form-control" required><%= post.body %></textarea>
                </div>
                <button class="btn btn-success">Update</button>
            </form>
        </div>
    </div>